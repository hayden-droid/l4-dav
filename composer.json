{
    "name": "ngmy/webdav-client",
    "type": "library",
    "description": "The WebDAV client for PHP",
    "keywords": [
        "webdav",
        "client",
        "webdav client",
        "stream",
        "curl",
        "psr-7",
        "psr-17",
        "psr-18"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yuta Nagamiya",
            "email": "y.nagamiya@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-dom": "*",
        "lib-libxml": "*",
        "ngmy/enum": "^0.4",
        "php-http/discovery": "^1.13",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory-implementation": "^1.0",
        "psr/http-message": "^1.0",
        "symfony/http-foundation": "^5.2.2"
    },
    "require-dev": {
        "mikey179/vfsstream": "1.6.8",
        "mockery/mockery": "1.4.2",
        "nyholm/psr7": "^1.1",
        "php-http/curl-client": "^2.2",
        "phpstan/phpstan-mockery": "0.12.11"
    },
    "autoload": {
        "psr-4": {
            "Ngmy\\WebDav\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ngmy\\WebDav\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "@php tools/phpunit --colors=always"
        ],
        "lint": [
            "@php tools/phpcs"
        ],
        "findbugs": [
            "@php tools/phpstan analyse --ansi"
        ],
        "fmt": [
            "@php tools/phpcbf | exit 0",
            "@php tools/php-cs-fixer fix --ansi"
        ],
        "docs": [
            "@php tools/phpDocumentor --force"
        ]
    }
}
